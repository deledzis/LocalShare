<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="password"
            type="com.deledzis.localshare.domain.model.TrackingPassword" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="controller"
            type="com.deledzis.localshare.presentation.screens.trackingpasswords.ITrackingPasswordActionsHandler" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutAnimation="@anim/rv_items_appearance">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_32dp"
            android:layout_marginTop="@dimen/size_16dp"
            android:layout_marginEnd="@dimen/size_32dp"
            android:layout_marginBottom="@dimen/size_16dp"
            android:foreground="?android:selectableItemBackground"
            android:onClick="@{() -> controller.handleOnClick(password, position)}"
            app:cardBackgroundColor="@color/gray_700"
            app:cardCornerRadius="@dimen/size_26dp"
            app:cardElevation="@dimen/size_8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:id="@+id/map_preview_container"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:layout_marginLeft="@dimen/size_24dp"
                    android:layout_marginTop="@dimen/size_24dp"
                    android:layout_marginEnd="@dimen/size_24dp"
                    android:layout_marginRight="@dimen/size_24dp"
                    app:cardCornerRadius="@dimen/size_16dp"
                    app:cardElevation="@dimen/size_0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/map_preview"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        map:liteMode="true"
                        map:mapType="normal" />

                    <TextView
                        style="@style/TextView.TimeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="@dimen/size_8dp"
                        android:background="@drawable/bgr_tracking_password_last_update_time"
                        app:date_time="@{password.lastUpdateTime}"
                        app:visibility="@{!password.active}"
                        tools:text="21.05.2010" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:layout_marginTop="@dimen/size_24dp"
                    android:layout_marginEnd="@dimen/size_24dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_bold"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@{password.description}"
                    android:textColor="@color/text"
                    android:textSize="@dimen/size_20sp"
                    app:layout_constraintEnd_toStartOf="@id/ic_active"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/map_preview_container"
                    tools:text="Для друзей" />

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:layout_marginBottom="@dimen/size_32dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_regular"
                    android:maxLines="4"
                    android:textColor="@color/text"
                    android:textSize="@dimen/size_14sp"
                    app:hex="@{password.password}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tv_description"
                    app:layout_constraintStart_toStartOf="@id/tv_description"
                    app:layout_constraintTop_toBottomOf="@id/tv_description"
                    tools:text="AxFd ••• AsD" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/ic_active"
                    android:layout_width="@dimen/size_64dp"
                    android:layout_height="@dimen/size_64dp"
                    android:layout_marginTop="@dimen/size_24dp"
                    android:layout_marginEnd="@dimen/size_24dp"
                    android:layout_marginRight="@dimen/size_24dp"
                    android:layout_marginBottom="@dimen/size_32dp"
                    app:cardBackgroundColor="@{password.active ? @color/green_200 : @color/active_status_bgr}"
                    app:cardCornerRadius="@dimen/size_50dp"
                    app:cardElevation="@dimen/size_0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/map_preview_container">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/size_48dp"
                        android:layout_height="@dimen/size_48dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="@color/green_60"
                        app:cardCornerRadius="@dimen/size_50dp"
                        app:cardElevation="@dimen/size_4dp"
                        app:visibility="@{password.active}" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</layout>