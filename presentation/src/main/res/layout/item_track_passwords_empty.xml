<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.deledzis.localshare.presentation.screens.trackpasswords.ITrackPasswordActionsHandler" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_32dp"
            android:layout_marginTop="@dimen/size_32dp"
            android:layout_marginEnd="@dimen/size_32dp"
            android:layout_marginBottom="@dimen/size_32dp"
            app:cardCornerRadius="@dimen/size_26dp"
            app:cardElevation="@dimen/size_8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/unavailable_placeholder">

                <ImageView
                    android:id="@+id/ic_active"
                    android:layout_width="@dimen/size_144dp"
                    android:layout_height="@dimen/size_80dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="@dimen/size_64dp"
                    android:src="@drawable/ic_animals_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:layout_marginTop="@dimen/size_32dp"
                    android:layout_marginEnd="@dimen/size_24dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_medium"
                    android:text="@string/empty_track_passwords"
                    android:textColor="@color/text"
                    android:textSize="@dimen/size_18sp" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_32dp"
            android:layout_marginEnd="@dimen/size_32dp"
            android:layout_marginBottom="@dimen/size_32dp"
            android:onClick="@{() -> handler.handleOnAddClick()}"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="@dimen/size_26dp"
            app:cardElevation="@dimen/size_0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgr_dashed">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ic_add"
                    android:layout_width="@dimen/size_64dp"
                    android:layout_height="@dimen/size_64dp"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:layout_marginTop="@dimen/size_32dp"
                    android:layout_marginBottom="@dimen/size_32dp"
                    app:cardBackgroundColor="@color/fab_bgr"
                    app:cardCornerRadius="@dimen/size_50dp"
                    app:cardElevation="@dimen/size_0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_welcome">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/size_48dp"
                        android:layout_height="@dimen/size_48dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:selectableItemBackground"
                        android:onClick="@{() -> handler.handleOnAddClick()}"
                        app:cardBackgroundColor="@color/fab"
                        app:cardCornerRadius="@dimen/size_50dp"
                        app:cardElevation="@dimen/size_4dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_plus" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:layout_marginEnd="@dimen/size_24dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_bold"
                    android:text="@string/btn_add_track_password"
                    android:textColor="@color/green_60"
                    android:textSize="@dimen/size_18sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>