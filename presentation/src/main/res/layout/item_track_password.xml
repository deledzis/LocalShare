<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="password"
            type="com.deledzis.localshare.domain.model.LocationPassword" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="viewModel"
            type="com.deledzis.localshare.presentation.screens.trackpasswords.ITrackPasswordActionsHandler" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutAnimation="@anim/rv_items_appearance">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_32dp"
            android:layout_marginTop="@dimen/size_16dp"
            android:layout_marginEnd="@dimen/size_32dp"
            android:layout_marginBottom="@dimen/size_16dp"
            android:foreground="?android:selectableItemBackground"
            android:onClick="@{() -> viewModel.handleOnClick(password, position)}"
            app:cardBackgroundColor="@{password.active ? @color/green_60 : @color/gray_700}"
            app:cardCornerRadius="@dimen/size_26dp"
            app:cardElevation="@dimen/size_8dp"
            tools:cardBackgroundColor="@color/green_60">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_24dp"
                    android:layout_marginTop="@dimen/size_32dp"
                    android:layout_marginEnd="@dimen/size_24dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_bold"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/text"
                    android:textSize="@dimen/size_20sp"
                    app:hex="@{password.password}"
                    app:layout_constraintEnd_toStartOf="@id/ic_active"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="AxFd ••• AsD" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8dp"
                    android:layout_marginBottom="@dimen/size_32dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/sf_regular"
                    android:maxLines="4"
                    android:text="@{password.description}"
                    android:textColor="@color/text"
                    android:textSize="@dimen/size_14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tv_password"
                    app:layout_constraintStart_toStartOf="@id/tv_password"
                    app:layout_constraintTop_toBottomOf="@id/tv_password"
                    tools:text="Для друзей" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/ic_active"
                    android:layout_width="@dimen/size_64dp"
                    android:layout_height="@dimen/size_64dp"
                    android:layout_marginTop="@dimen/size_32dp"
                    android:layout_marginEnd="@dimen/size_24dp"
                    android:layout_marginRight="@dimen/size_24dp"
                    android:layout_marginBottom="@dimen/size_32dp"
                    android:foreground="?android:selectableItemBackground"
                    app:cardBackgroundColor="@color/active_status_bgr"
                    app:cardCornerRadius="@dimen/size_50dp"
                    app:cardElevation="@dimen/size_0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/size_48dp"
                        android:layout_height="@dimen/size_48dp"
                        android:layout_gravity="center"
                        android:foreground="?android:selectableItemBackground"
                        app:cardBackgroundColor="@color/active_status"
                        app:cardCornerRadius="@dimen/size_50dp"
                        app:cardElevation="@dimen/size_4dp"
                        app:visibility="@{password.active}" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</layout>