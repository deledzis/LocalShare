<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/locationPasswordsFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.deledzis.localshare.presentation.screens.signin.SignInFragment"
        android:label="SignInFragment">

        <action
            android:id="@+id/action_signInFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:popUpTo="@id/signInFragment" />

        <action
            android:id="@+id/action_signInFragment_to_forgetPasswordFragment"
            app:destination="@id/forgetPasswordFragment"
            app:enterAnim="@anim/slide_in_right" />

    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.deledzis.localshare.presentation.screens.register.RegisterFragment"
        android:label="RegisterFragment" />

    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="com.deledzis.localshare.presentation.screens.forgetpassword.ForgetPasswordFragment"
        android:label="ForgetPasswordFragment" />

    <fragment
        android:id="@+id/locationPasswordsFragment"
        android:name="com.deledzis.localshare.presentation.screens.locationpasswords.LocationPasswordsFragment"
        android:label="LocationPasswordsFragment">

        <action
            android:id="@+id/action_locationPasswordsFragment_to_trackPasswordsFragment"
            app:destination="@id/trackPasswordsFragment" />

    </fragment>

    <fragment
        android:id="@+id/trackPasswordsFragment"
        android:name="com.deledzis.localshare.presentation.screens.trackpasswords.TrackPasswordsFragment"
        android:label="TrackPasswordsFragment">

        <action
            android:id="@+id/action_trackPasswordsFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />

    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.deledzis.localshare.presentation.screens.settings.SettingsFragment"
        android:label="SettingsFragment" />

</navigation>